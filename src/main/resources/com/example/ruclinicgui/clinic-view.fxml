<VBox alignment="CENTER" prefHeight="551.0" prefWidth="676.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ruclinicgui.ClinicManagerMain">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane prefHeight="493.0" prefWidth="588.0">
      <center>
         <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
           <tabs>
             <Tab text="Schedule/Cancel">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="297.0" prefWidth="588.0">
                        <children>
                           <DatePicker layoutX="126.0" layoutY="26.0" />
                           <Text layoutX="6.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Appointment Date: " />
                           <Text layoutX="6.0" layoutY="103.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Patient Information:" />
                           <TextField layoutX="126.0" layoutY="86.0" promptText="enter first name" />
                           <TextField layoutX="288.0" layoutY="86.0" promptText="enter last name" />
                           <DatePicker layoutX="451.0" layoutY="86.0" promptText="select date of birth" />
                           <RadioButton layoutX="318.0" layoutY="24.0" mnemonicParsing="false" text="Office Visit">
                              <toggleGroup>
                                 <ToggleGroup fx:id="chooseOne" />
                              </toggleGroup>
                           </RadioButton>
                           <RadioButton layoutX="429.0" layoutY="24.0" mnemonicParsing="false" text="Imaging Service" toggleGroup="$chooseOne" />
                           <ComboBox layoutX="14.0" layoutY="130.0" prefWidth="150.0" promptText="Timeslot" />
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
             <Tab text="Reschedule">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
             </Tab>
               <Tab text="Clinic Locations">
                  <content>
                     <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
               </Tab>
               <Tab text="Demo Menu">
                  <content>
                     <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
               </Tab>
           </tabs>
         </TabPane>
      </center>
   </BorderPane>

    <Label fx:id="welcomeText" />
</VBox>
